##############################################
# StyleMatch — Terraform Main Configuration
##############################################

terraform {
  required_version = ">= 1.5.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.5"
    }
    archive = {
      source  = "hashicorp/archive"
      version = "~> 2.4"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Project     = var.project_name
      Environment = var.environment
      ManagedBy   = "terraform"
    }
  }
}

# Sufijo aleatorio para nombres globalmente únicos (S3, Lambda, etc.)
# Se genera una sola vez y persiste en el state
resource "random_id" "suffix" {
  byte_length = 4
}
